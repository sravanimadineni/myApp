pipeline {
    agent any

    environment {
        SERVICE_NAME = 'user-service'
        AWS_REGION = 'us-east-1'  // Change to your AWS region
        ECR_REPO = 'myapp-ecr-repo'
        IMAGE_NAME = 'myapp-user-service'
        CONTAINER_PORT = '8081'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/sravanimadineni/myApp.git'
            }
        }

        stage('Build') {
            steps {
                dir('user-service') {
                    bat 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Docker Build & Push to AWS ECR') {
            steps {
                script {
                    // AWS ECR Login
                    bat """
                    aws ecr get-login-password --region ${env.AWS_REGION} > ecr-login.txt
                    docker login --username AWS --password $(type ecr-login.txt) <AWS_ACCOUNT_ID>.dkr.ecr.${env.AWS_REGION}.amazonaws.com
                    """

                    // Build and tag Docker image
                    bat """
                    docker build -t ${env.IMAGE_NAME} user-service/.
                    docker tag ${env.IMAGE_NAME}:latest <AWS_ACCOUNT_ID>.dkr.ecr.${env.AWS_REGION}.amazonaws.com/${env.ECR_REPO}:latest
                    """

                    // Push Docker image to AWS ECR
                    bat "docker push <AWS_ACCOUNT_ID>.dkr.ecr.${env.AWS_REGION}.amazonaws.com/${env.ECR_REPO}:latest"
                }
            }
        }

        stage('Deploy to AWS EC2') {
            steps {
                script {
                    bat """
          
